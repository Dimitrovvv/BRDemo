@model ProductViewModel

<h3>Add product</h3>

<form asp-controller="Products" asp-action="Create">
    <div class="mb-3">
        <label class="form-label">Select product</label>
        <select class="form-select" asp-items="Model.CategoriesList"></select>
    </div>

    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name"/>

    <button class="btn btn-primary mt-3">Add product</button>
</form>