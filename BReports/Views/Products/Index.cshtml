@model ProductViewModelList

    <h2>Maybe you want to <a href="/Products/Create">add a product</a></h2>


@if (Model == null)
{
    <h2>no available products at the moment</h2>

}
else
{
    @foreach (var product in Model.List)
    {
        <div class="card">
            <div class="card-body">
                <div>@product.Id</div>
                <div>@product.Name</div>
            </div>
        </div>
    }
}
