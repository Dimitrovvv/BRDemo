@model UserViewModel

@{
    ViewBag.Title = "Edit user";
}
<h1 class="mb-2">Edit user</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" placeholder="@Model.FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" placeholder="@Model.LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="@Model.Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BankId" class="form-label"></label>
        <input asp-for="BankId" class="form-control" placeholder="@Model.BankId" />
        <span asp-validation-for="BankId" class="text-danger"></span>
    </div>
    <div class="orm-group mb-3">
        <label class="form-label">Select location</label>
        <select class="form-select" asp-for="Location.Name" asp-items="Model.LocationList"></select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-dark">Запази </button>
        <a asp-action="Index" class="btn btn-primary">Отказ</a>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>

