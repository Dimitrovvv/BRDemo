@model SaleViewModel


<h3 class="mb-2">Редактиране на продажба</h3>

<form method="post">
    <div class="form-group">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" placeholder="@Model?.Category" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
      <div class="form-group">
        <label asp-for="Product" class="form-label"></label>
        <input asp-for="Product" class="form-control" placeholder="@Model?.Product" />
        <span asp-validation-for="Product" class="text-danger"></span>
    </div>
      <div class="form-group">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" placeholder="@Model?.Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" placeholder="@Model?.Amount" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-dark">Запази </button>
        <a asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
