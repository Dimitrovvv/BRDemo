@model LocationViewModel

<button onclick="history.back()" class="btn btn-outline-info my-3">Назад</button>
<h3>Редактирай офис</h3>

<form asp-controller="Locations" asp-action="Edit">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" placeholder="@Model?.Name"/>
    <label class="col-form-label" asp-for="Region"></label>
    <input class="form-control" asp-for="Region" placeholder="@Model?.Region" />
    <button class="btn btn-info mt-3">Запази</button>
</form>